<div class="login-form"
     i18n:domain="silva">

  <h2 i18n:translate="">Protected area</h2>

  <div style="color:#f00; font-weight:bold;"
    tal:define="message request/login_status | nothing"
    tal:condition="message">
    <!-- override the local style with a div.warning selector in your css -->
    <div class="feedback warning"
      tal:content="message">
      status
    </div>
  </div>

  <p tal:condition="not: request/login_status | nothing"
    i18n:translate="">
    The page you are trying to visit has restricted access. Please
    authenticate.
  </p>

  <form method="post" action="#" name="login_form"
        tal:attributes="action request/action">
    <input type="hidden" name="__ac.field.origin" value=""
           tal:attributes="value request/__ac.field.origin | string:"/>
    <input type="hidden" name="__ac.field.secret" value=""
           tal:attributes="value request/__ac.field.secret | string:"/>

    <div class="form">
      <div class="form-title">
        <label for="name" i18n:translate="">Log in to the site</label>
      </div>
      <div class="form-element">
        <div class="form-label">
          <label for="name" i18n:translate="">Username</label>
        </div>
        <div class="form-field">
          <input type="text" size="30" id="name" name="__ac.field.name" />
        </div>
      </div>
      <div class="form-element">
        <div class="form-label">
          <label for="password" i18n:translate="">Password</label>
        </div>
        <div class="form-field">
          <input type="password"  size="30"
            id="password" name="__ac.field.password" />
        </div>
      </div>
      <div class="form-element">
        <div class="form-field form-actions">
          <input class="button cancel" type="button" value="Cancel"
            name="cancel" onClick="history.go(-1)"
            i18n:attributes="value" />
          <input class="button submit" type="submit" value="Log in"
            name="login" i18n:attributes="value" />
        </div>
      </div>
    </div>

  </form>
</div>
